    url_xpath
    url 'https://www.archlinux.org/packages/extra/x86_64/gnutls/'
    xpath '//*[@id="pkgdetails"]/h2'
    regex /^gnutls ([\w.]*)-\d+$/
  end

  actual do
    git_tag
    regex /^(.*)-\d+$/
  end

  deps do
    %w(gmp nettle libtasn1 autogen p11-kit guile gc libunistring libffi libtool zlib).each do |dep|
      item do
        name dep

        expected do
          github_release
          repo "amylum/#{dep}"
        end

        actual do
          grep
          file 'Makefile'
          regex /^#{dep.upcase}_VERSION = ([\d.-]+)$/
        end
      end
    end
  end
