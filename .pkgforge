name 'gnutls'
org 'amylum'

licenses 'COPYING'

deps(
  gmp: '6.1.1-4',
  nettle: '3.3-5',
  libtasn1: '4.9-5',
  autogen: '5.18.12-1',
  'p11-kit': '0.23.2-6',
  guile: '2.0.11-3',
  gc: '7.6.0-9',
  libunistring: '0.9.6-2',
  libffi: '3.2.1-4',
  libtool: '2.4.6-2',
  zlib: '1.2.8-4',
  libidn: '1.33-2'
)

configure_flags(
  prefix: '/usr',
  'enable-guile': nil,
  'with-guile-site-dir': 'no',
  'with-zlib': nil,
  'with-libz-prefix': "#{dep(:zlib)}/usr",
  host: 'x86_64-unknown-linux-gnu'
)
remove_linker_archives

cflags
harden

build do
  run 'make bootstrap'
  configure
  make
  install
end

test do
  # TODO: add tests
end
