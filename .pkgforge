name 'gnutls'
org 'amylum'

licenses 'COPYING'

deps(
  gmp: '6.1.2-1',
  nettle: '3.3-6',
  libtasn1: '4.9-5',
  autogen: '5.18.12-11',
  'p11-kit': '0.23.2-6',
  guile: '2.0.14-1',
  gc: '7.6.0-17',
  libunistring: '0.9.7-1',
  libffi: '3.2.1-4',
  libtool: '2.4.6-2',
  zlib: '1.2.11-1',
  libidn: '1.33-2'
)

configure_flags(
  prefix: '/usr',
  'disable-rpath': nil,
  'disable-cxx': nil,
  'enable-guile': nil,
  'with-guile-site-dir': 'no',
  'with-zlib': nil,
  'with-libz-prefix': "#{dep(:zlib)}/usr",
  build: 'x86_64-pc-linux-gnu',
  host: 'x86_64-unknown-linux-gnu'
)
remove_linker_archives
remove_pkgconfig_files

cflags
harden

build do
  run "ln -s #{dep(:libffi)}/usr/lib/libffi-3.2.1/include/ #{dep(:libffi)}/usr/include"
  run 'make bootstrap'
  configure
  make 'LD_LIBRARY_PATH' => @forge.deps.keys.map { |x| dep(x) + '/usr/lib' }.join(':')
  install
end

test do
  # TODO: add tests
end
